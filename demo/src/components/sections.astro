---
import { getCollection } from "astro:content";
import { Block, SectionsList, Seperator } from "basecamp/components";

const sections = (await getCollection("sections"))
	.sort((a, b) => {
		return a.data.order - b.data.order;
	})
	.map((s) => s.data);
---

<Block.Wrapper id="sections" variant="alternative">
    <Block.Seperator slot="seperator">
        <Seperator loading="lazy" />
    </Block.Seperator>
    <Block.Header slot="header" className="text-primary">
        Our Sections
    </Block.Header>
    <Block.SubHeader slot="subHeader" tag="p">
        Offering fun and challenging activities, unique experiences,
        everyday adventure and the chance to help others so that we make a
        positive impact in communities.
    </Block.SubHeader>
    <Block.Body slot="body" size="lg">
        <SectionsList sections={sections} />
    </Block.Body>
</Block.Wrapper>