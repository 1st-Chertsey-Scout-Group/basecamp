---
import { SendHorizonalIcon } from "lucide-react";
import Button from "../ui/button.astro";

interface Props {
    name: string;
    action?: string | undefined | null;
    method?: string | undefined | null;
    button: string;
}

const { name, action, method, button }: Props = Astro.props;
---

<form name={name} action={action} method={method} class="space-y-8">
    <input class="hidden" name="number" />

    <slot />

    <Button Icon={SendHorizonalIcon} type="submit" text={button} />
    <div class="text-sm text-center">
        Read our <a
            href="/privacy-policy"
            class="hover:underline underline-offset-2 text-primary"
        >
            Privacy Policy</a
        >.
    </div>
</form>
